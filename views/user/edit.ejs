<%- include('../partials/header.ejs')%>

<div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <%- include('../partials/sidebar.ejs') %>

    <div id="page-content-wrapper">
        <div class="container-fluid">
            <h1 class="mt-4">USUARIO</h1>
            <p>EDIÇÃO DE USUARIO</p>
        </div>
        <form action="/user/update" method="POST">
            <div class="container float-left">
                <input type="text" hidden name="id" value="<%=user.id%>">

                <div class="form-group has-success">
                    <label for="Name">Nome</label>
                    <input type="text" class="form-control" id="Name" name="name" placeholder="Nome"
                        value="<%=user.name%>">
                </div>
                <div class="form-group has-warning">
                    <label for="login">Login</label>
                    <input type="text" class="form-control" id="email" name="login" placeholder="Login"
                        value="<%=user.login%>">
                </div>
                <div class="form-group has-error">
                    <label for="password">Senha</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Senha"
                        value="<%user.password%>">
                </div>

                <div class="form-row">

                    <%
                        if(user.menu1 == 1){
                    %>
                    <div class="checkbox form-group">
                        <label style="margin-right: 15px;">
                            <input type="checkbox" checked name="menu1" value="s"> Financeiro
                        </label>
                    </div>
                    <% } else { %>
                    <div class="checkbox form-group">
                        <label style="margin-right: 15px;">
                            <input type="checkbox" name="menu1" value="s"> Financeiro
                        </label>
                    </div>
                    <%}%>

                    <%
                    if(user.menu2 == 1){
                    %>
                    <div class="checkbox form-group">
                        <label style="margin-right: 15px;">
                            <input type="checkbox" checked name="menu2" value="s"> Vendas
                        </label>
                    </div>
                    <% } else { %>
                    <div class="checkbox form-group">
                        <label style="margin-right: 15px;">
                            <input type="checkbox" name="menu2" value="s"> Vendas
                        </label>
                    </div>
                    <%}%>

                    <%
                    if(user.menu3 == 1){
                    %>
                    <div class="checkbox form-group">
                        <label style="margin-right: 15px;">
                            <input type="checkbox" checked name="menu3" value="s"> Relatórios
                        </label>
                    </div>
                    <% } else { %>
                    <div class="checkbox form-group">
                        <label style="margin-right: 15px;">
                            <input type="checkbox" name="menu3" value="s"> Relatórios
                        </label>
                    </div>
                    <%}%>

                    <%
                    if(user.menu4 == 1){
                    %>
                    <div class="checkbox form-group">
                        <label style="margin-right: 15px;">
                            <input type="checkbox" checked name="menu4" value="s"> Estoque
                        </label>
                    </div>
                    <% } else { %>
                    <div class="checkbox form-group">
                        <label style="margin-right: 15px;">
                            <input type="checkbox" name="menu4" value="s"> Estoque
                        </label>
                    </div>
                    <%}%>

                    <%
                    if(user.menu5 == 1){
                    %>
                    <div class="checkbox form-group">
                        <label style="margin-right: 15px;">
                            <input type="checkbox" checked name="menu5" value="s"> Usuarios
                        </label>
                    </div>
                    <% } else { %>
                    <div class="checkbox form-group">
                        <label style="margin-right: 15px;">
                            <input type="checkbox" name="menu5" value="s"> Usuarios
                        </label>
                    </div>
                    <%}%>

                </div>
                <button type="submit" class="btn btn-info">Cadastrar</button>
        </form>
    </div>
</div>
</div>

<%- include('../partials/footer.ejs')%>