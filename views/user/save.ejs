<%- include('../partials/header.ejs')%>

<div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <%- include('../partials/sidebar.ejs') %>

    <div id="page-content-wrapper">
        <div class="container-fluid">
            <h1 class="mt-4">USUARIO</h1>
            <p>CADASTRO DE USUARIO</p>
        </div>
        <form action="/user/save" method="POST">
            <div class="container float-left">
                <div class="form-group has-success">
                    <label for="Name">Nome</label>
                    <input type="text" class="form-control" id="Name" name="name" placeholder="Nome">
                </div>
                <div class="form-group has-warning">
                    <label for="login">Login</label>
                    <input type="text" class="form-control" id="email" name="login" placeholder="Login">
                </div>
                <div class="form-group has-error">
                    <label for="password">Senha</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Senha">
                </div>

                <div class="form-row">
                    <div class="checkbox form-group">
                        <label style="margin-right: 15px;">
                            <input type="checkbox" name="menu1" value="s"> Financeiro
                        </label>
                    </div>
                    <div class="checkbox">
                        <label style="margin-right: 15px;">
                            <input type="checkbox" name="menu2" value="s"> Vendas
                        </label>
                    </div>
                    <div class="checkbox">
                        <label style="margin-right: 15px;">
                            <input type="checkbox" name="menu3" value="s"> Relatórios
                        </label>
                    </div>
                    <div class="checkbox">
                        <label style="margin-right: 15px;">
                            <input type="checkbox" name="menu4" value="s"> Estoque
                        </label>
                    </div>
                    <div class="checkbox">
                        <label style="margin-right: 15px;">
                            <input type="checkbox" name="menu5" value="s"> Usúarios
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-info">Cadastrar</button>
        </form>
    </div>
</div>
</div>

<%- include('../partials/footer.ejs')%>